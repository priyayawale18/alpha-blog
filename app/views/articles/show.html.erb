<div class="container-fluid">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6"><br>
			<h2>Article Information</h2><hr>
			<div class="card">
				<div class= "card-header" >
				  By <%= @article.user_log&.username %>
				  <%#= link_to_gravator_for(@article.user_log), user_logs_path(@article.user_log) %>

                  <% if @article.categories.any? %>
                      <div class="mt-2"><%= render @article.categories %></div> 
                  <% end %>
                 

				</div>
				<div class="card-body">
 
					


<p><b>Title:</b><%= @article.title %></p>
<p><b>Description:</b><%= @article.description %></p>
<% if logged_in? && ( @article.user_log == current_user || current_user.admin? ) %>
<%= link_to 'Edit Article', edit_article_path(@article), class: "btn btn-info" %>
<% end %>
<%= link_to 'Return To Articles list', articles_path, class: "btn btn-success" %>







				</div>
			</div>
		</div>
	</div>
</div>