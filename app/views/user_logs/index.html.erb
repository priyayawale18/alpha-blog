<%= stylesheet_link_tag('custom')%>

<h1 class="text-center mt-4">Alpha Bloggers</h1><br>

<div class="flickr_pagination md-4">
    <%= will_paginate @user_log, :container => false %>
</div>

<div class="container">
  <% @user_log.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            <%= link_to user.username, user %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h5>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <div class="d-flex align-items-center justify-content-md-center">
            <%= link_to "View", user, class: "btn btn-outline-success ms-2" %>
            <% if logged_in? %>
              <% if user == current_user %>
                  <%= link_to "Edit", edit_user_log_path(user), class: "btn btn-outline-info ms-2" %>
              <% end %>
              <% if current_user.admin? %>
                  <%= button_to "Delete", user_log_path(user), class: "btn btn-outline-danger ms-2", method: :delete,
                    data: {confirm: "Are you sure you want to delete the user account and all associated articles?"} %>
              <%end%>
            <% end %>
            </div>

 
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination md-4">
    <%= will_paginate @user_log, :container => false %>
</div>

